{
    "name": "learnermax-api",
    "description": "LearnerMax API using Express with aws-lambda-web-adapter",
    "version": "1.0.0",
    "private": true,
    "main": "dist/app.js",
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.398.0",
        "@aws-sdk/lib-dynamodb": "^3.398.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "compression": "^1.7.4"
    },
    "devDependencies": {
        "@types/node": "^20.5.0",
        "@types/express": "^4.17.17",
        "@types/cors": "^2.8.13",
        "@types/compression": "^1.7.2",
        "typescript": "^5.1.6",
        "ts-node": "^10.9.1",
        "aws-sdk-client-mock": "^3.0.0",
        "jest": "^29.6.2",
        "@types/jest": "^29.5.4"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "ts-node src/app.ts",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.(test|spec).ts",
            "**/?(*.)(test|spec).ts"
        ]
    }
}

