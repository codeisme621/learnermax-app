{
  "name": "e2e",
  "version": "1.0.0",
  "description": "End-to-end testing for LearnerMax API and UI",
  "main": "index.js",
  "scripts": {
    "setup:local": "node scripts/setup-local.js",
    "setup:preview": "echo 'Preview environment setup not yet implemented'",
    "test:api": "TEST_ENV=dev playwright test tests/api --reporter=html",
    "test:api:local": "TEST_ENV=local playwright test tests/api --reporter=html",
    "test:api:watch": "TEST_ENV=dev playwright test tests/api --ui",
    "test:ui": "UI_TEST_ENV=preview playwright test tests/ui --project=ui-tests-chromium --reporter=html",
    "test:ui:local": "UI_TEST_ENV=local playwright test tests/ui --project=ui-tests-chromium --reporter=html",
    "test:ui:watch": "UI_TEST_ENV=preview playwright test tests/ui --project=ui-tests-chromium --ui",
    "test:all": "TEST_ENV=dev UI_TEST_ENV=preview playwright test --reporter=html",
    "test:all:local": "TEST_ENV=local UI_TEST_ENV=local playwright test --reporter=html"
  },
  "keywords": ["e2e", "testing", "playwright", "api"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.5.1",
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "swagger-parser": "^10.0.3",
    "@types/js-yaml": "^4.0.5"
  }
}
